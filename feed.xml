&lt;p class=&quot;text-align-right&quot;&gt;&lt;span lang=&quot;EN-US&quot; style=&quot;background:white&quot; xml:lang=&quot;EN-US&quot;&gt;2025&lt;/span&gt;&lt;span style=&quot;background:white&quot;&gt;年&lt;/span&gt;&lt;span lang=&quot;EN-US&quot; style=&quot;background:white&quot; xml:lang=&quot;EN-US&quot;&gt;4&lt;/span&gt;&lt;span style=&quot;background:white&quot;&gt;月&lt;/span&gt;&lt;span lang=&quot;EN-US&quot; style=&quot;background:white&quot; xml:lang=&quot;EN-US&quot;&gt;15&lt;/span&gt;&lt;span style=&quot;background:white&quot;&gt;日&lt;/span&gt;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&lt;/p&gt;</content:encoded>
