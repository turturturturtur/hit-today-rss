&lt;img alt=&quot; 3651&quot; data-entity-type=&quot;file&quot; data-entity-uuid=&quot;c30ad76b-6131-4acd-b877-ae870b09ba62&quot; height=&quot;182&quot; src=&quot;/sites/today1.prod1.dpweb1.hit.edu.cn/files/inline-images/%5Bdate%3Acustom%3AY%5D/%5Bdate%3Acustom%3Am%5D/%5Bdate%3Acustom%3Ad%5D/%E5%9B%BE%E7%89%87_3651.png&quot; width=&quot;182&quot; class=&quot;align-center&quot;&gt;</content:encoded>
